  const isPositive = amount > 0;
  return (
    <div
      className={`font-body font-semibold text-lg ${
        isPositive ? 'text-credit' : 'text-debt'
      }`}
    >
      {isPositive ? '+' : ''}${amount.toLocaleString()}
    </div>
  );
