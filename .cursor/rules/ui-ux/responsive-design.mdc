  const sizes = {
    sm: 'px-3 py-1.5 text-sm min-h-[36px]',
    md: 'px-4 py-2 text-base min-h-[44px]', // Touch target
    lg: 'px-6 py-3 text-lg h-12', // Touch target
  };
  
  return (
    <button className={`${sizes[size]} rounded-xl`}>
      {children}
    </button>
  );
}

