# Backend environment variables (example)
# Copy to `.env.local` (preferred) or `.env`

# App
PORT=3000
NODE_ENV=development
API_PREFIX=api
# Comma-separated list
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=travelsplit
DB_LOGGING=false
# DB_SYNCHRONIZE defaults to false.
# Set DB_SYNCHRONIZE=true ONLY for local development if you want TypeORM to auto-create/update tables.
# Keep it false in staging/production and use migrations instead.
DB_SYNCHRONIZE=false

# Auth
# Required: app will throw on startup if missing
JWT_SECRET=change-me
# Seconds (default 3600)
JWT_EXPIRES_IN=3600
